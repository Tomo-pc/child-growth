<div class="container-new-edit">
  <h2 class="new-edit-title">キロクフォーム</h2>

  <%= form_with(model: @milk, local: true) do |form| %>
    <div class="form-content">
      <div class="new-edit-form-label">
        <%= form.label :"何をしましたか？" %> <br />
      </div>
      <%= form.collection_select(:condition_id, Condition.all, :id, :name, {}, {class:"condition-select"}) %>
    </div>

    <div class="form-content">
      <div class="new-edit-form-label">
        <%= form.label :"ミルクはどのくらい飲みましたか？", class:'milk-label' %>
        <%= form.label :"※ミルク以外の場合は選択不要です", class: 'milk-amount-alert' %> <br />  
      </div>  
        <%= form.collection_select(:amount_id, Amount.all, :id, :name, {}, {class:"amount-select"}) %>
    </div>

    <div class="form-content">
      <div class="new-edit-form-label">
        <%= form.label :"いつですか？" %>
      </div>
      <div class="time-content">
        <%= form.time_select(:time, {class:'select-date', id:"time", prompt:'--', time_separator: ':'}, ignore_data: true) %>
      </div>
    </div>

    <div class="form-content">
      <div class="new-edit-form-label">
        <%= form.label :"画像を選択してください（任意）"%>
      </div>
        <%= form.file_field :image, id:"item-image" %>
    </div>
    
    <div class="submit_one">
      <%= link_to "もどる", root_path, class: 'new-edit-redirect'%>
      <%= form.submit "キロクする", class: 'new-edit-submit' %>
    </div>
  <% end %>
</div>